<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/colorAccent">





    <TextView
        android:id="@+id/receive_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received Time: "
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        />
    <TextView
        android:id="@+id/receive_time"
        android:layout_toRightOf="@id/receive_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="00:00"
        android:textSize="16dp"
        android:textAlignment="viewEnd"
        android:layout_marginTop="24dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentEnd="true"
        />


    <TextView
        android:id="@+id/seen_status_label"
        android:layout_below="@id/receive_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seen Status: "
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        />
    <TextView
        android:id="@+id/seen_status"
        android:layout_toRightOf="@id/seen_status_label"
        android:layout_below="@id/receive_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Seen Status"
        android:textSize="16dp"
        android:textAlignment="viewEnd"
        android:layout_marginTop="24dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentEnd="true"
        />


    ///
    <TextView
        android:id="@+id/modify_time_label"
        android:layout_below="@id/seen_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify Date: "
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        />
    <TextView
        android:id="@+id/modify_time"
        android:layout_toRightOf="@id/modify_time_label"
        android:layout_below="@id/seen_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="00:00"
        android:textSize="16dp"
        android:textAlignment="viewEnd"
        android:layout_marginTop="24dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentEnd="true"
        />



    <Button
        android:id="@+id/closeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_below="@id/modify_time_label"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="8dp"
        android:text="Close"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"/>




</RelativeLayout>